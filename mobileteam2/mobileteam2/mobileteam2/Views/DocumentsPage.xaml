<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="mobileteam2.Views.DocumentsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:mobileteam2.ViewModels;assembly=mobileteam2"
    x:Name="contentDocumentsPage"
    Title="{Binding Title}">
    <ContentPage.BindingContext>
        <viewModels:DocumentsViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Button
                x:Name="EstimateBtn"
                Margin="0,100,0,100"
                BackgroundColor="{StaticResource Primary}"
                Clicked="DownloadEstimate"
                HorizontalOptions="CenterAndExpand"
                Text="Estimate Letter"
                TextColor="White"
                VerticalOptions="Center" />
            <Button
                x:Name="PaymentLetterBtn"
                Margin="0,100,0,100"
                BackgroundColor="{StaticResource Primary}"
                Clicked="DownloadPaymentLetter"
                HorizontalOptions="CenterAndExpand"
                Text="Payment Letter"
                TextColor="White"
                VerticalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>